<form action="/delete_product_confirm">
  <table id="delete_products">
    <tr>
      <th>
        Delete?
      </th>
      <th>
        ID
      </th>
      <th>
        Name
      </th>
    </tr>
    <% Product.all.each do |product| %>
      <tr>
        <td>
          <label for="<%= product.id %>">
          <input type="radio" value="<%= product.id %>" id="<%= product.id %>" name="product[id]">
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= product.product_name %>
        </td>
      </tr>
    <% end %>
  </table>
  <input type="submit">
</form>